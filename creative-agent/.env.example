# Google Cloud Configuration
PROJECT_ID=your-gcp-project-id
LOCATION=asia-northeast1
STORAGE_BUCKET=your-storage-bucket-name

# Firebase Configuration
# Leave empty to use Application Default Credentials (ADC) on Cloud Run
# Set to path for local development with service account JSON
FIREBASE_CREDENTIALS_PATH=

# Vertex AI Configuration
# Imagen: Latest stable version (imagen-4.0 for best quality, imagen-3.0 still supported)
IMAGEN_MODEL=imagen-4.0-generate-001
# Veo: Latest stable version for real video generation
VEO_MODEL=veo-3.0-generate-001
# Gemini: Latest flash model for fast, cost-effective generation
GEMINI_MODEL=gemini-2.5-flash

# Vertex AI Timeouts (in seconds)
GEMINI_TIMEOUT_SEC=120
IMAGEN_TIMEOUT_SEC=90
VEO_TIMEOUT_SEC=360  # 6 minutes for video generation (typically takes 2-5 minutes)
VEO_POLLING_INTERVAL_SEC=15  # Check operation status every 15 seconds

# Video Generation Configuration
# GCS bucket URI for VEO video output (required for real video generation)
# Example: gs://your-bucket-name/veo-output
VIDEO_OUTPUT_GCS_BUCKET=

# Pub/Sub Configuration
PUBSUB_SECRET_TOKEN=your-random-secret-token-here

# Mock Mode Flags (for development/testing without API costs)
# USE_MOCK_GEMINI: Use mock for text generation (copy.py)
# USE_MOCK_IMAGEN: Use mock for image generation (generates placeholder PNGs)
# USE_MOCK_VEO: Use mock for video generation (generates minimal valid MP4 files)
# USE_MOCK_FIRESTORE: Use in-memory Firestore for testing
# USE_MOCK_STORAGE: Use in-memory storage for testing
USE_MOCK_GEMINI=false
USE_MOCK_IMAGEN=false
USE_MOCK_VEO=false
USE_MOCK_FIRESTORE=false
USE_MOCK_STORAGE=false

# ADK Integration Flags (experimental)
# USE_ADK_ORCHESTRATION: Enable ADK-based agent orchestration
# ADK_ROLLOUT_PERCENTAGE: Percentage of jobs to use ADK (0-100), only applies if USE_ADK_ORCHESTRATION=true
USE_ADK_ORCHESTRATION=false
ADK_ROLLOUT_PERCENTAGE=0

# Server Configuration
PORT=8001
LOG_LEVEL=INFO
FRONTEND_URL=http://localhost:3000
